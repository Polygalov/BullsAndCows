<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:showDividers="middle"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etGuessNumber"
            android:layout_weight="1"
            android:hint="введите 4 цифры"
            android:textSize="24sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"/>

        <Button
            android:text="Проверить"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCheck"
            android:layout_weight="1"
            android:onClick="onMyButtonClick"
            android:layout_width="120dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ListView
            android:layout_height="match_parent"
            android:layout_width="220dp"
            android:id="@+id/listView"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Быки - 0"
                android:layout_width="match_parent"
                android:id="@+id/tvBulls"
                android:layout_weight="1"
                android:textSize="22sp"
                android:paddingLeft="16dp"
                android:layout_height="7dp"/>

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/bull_img"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:layout_height="50dp"/>

            <TextView
                android:text="Коровы - 0"
                android:layout_width="match_parent"
                android:id="@+id/tvCows"
                android:layout_weight="1"
                android:textSize="22sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:layout_height="12dp"/>

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/cow_img"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_height="50dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="6"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp">

            <CheckBox
                android:text=""
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox0"
                android:layout_gravity="center"/>

            <Button
                android:text="0"
                android:contentDescription="0"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/button0"
                android:onClick="buttonClickAll"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <CheckBox
                android:text=""
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox1"
                android:layout_gravity="center"/>

            <Button
                android:text="1"
                android:contentDescription="1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center"
                android:id="@+id/button1"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>

            <CheckBox
                android:text=""
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_gravity="center"/>

            <Button
                android:text="2"
                android:contentDescription="2"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_gravity="center"
                android:id="@+id/button2"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <CheckBox
                android:text=""
                android:layout_column="3"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_gravity="center"/>

            <Button
                android:text="3"
                android:contentDescription="3"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_gravity="center"
                android:id="@+id/button3"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <CheckBox
                android:text=""
                android:layout_column="4"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:layout_gravity="center"/>

            <Button
                android:text="4"
                android:contentDescription="4"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_gravity="center"
                android:id="@+id/button4"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <Button
                android:text="C"
                android:contentDescription="C"
                android:layout_column="5"
                android:layout_row="1"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:id="@+id/buttonClr"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <CheckBox
                android:text=""
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox5"
                android:layout_gravity="center"
                android:paddingTop="12dp"/>

            <Button
                android:text="5"
                android:contentDescription="5"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center"
                android:id="@+id/button5"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>
            <CheckBox
                android:text=""
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox6"
                android:layout_gravity="center"
                android:paddingTop="12dp"/>
            <Button
                android:text="6"
                android:contentDescription="6"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center"
                android:id="@+id/button6"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <CheckBox
                android:text=""
                android:layout_column="2"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox7"
                android:layout_gravity="center"
                android:paddingTop="12dp"/>

            <Button
                android:text="7"
                android:contentDescription="7"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_gravity="center"
                android:id="@+id/button7"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <CheckBox
                android:text=""
                android:layout_column="3"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox8"
                android:layout_gravity="center"
                android:paddingTop="12dp"/>

            <Button
                android:text="8"
                android:contentDescription="8"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_gravity="center"
                android:id="@+id/button8"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <CheckBox
                android:text=""
                android:layout_column="4"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox9"
                android:layout_gravity="center"
                android:paddingTop="12dp"/>

            <Button
                android:text="9"
                android:contentDescription="9"
                android:layout_column="4"
                android:layout_row="3"
                android:layout_gravity="center"
                android:id="@+id/button9"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <Button
                android:text="&lt;-"
                android:contentDescription="backSpace"
                android:layout_column="5"
                android:layout_row="3"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:id="@+id/buttonBackClr"
                android:onClick="buttonClickAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="1dp"/>


        </GridLayout>

    </LinearLayout>

</LinearLayout>